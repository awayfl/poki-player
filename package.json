{
	"name": "poki-player",
	"version": "0.0.6",
	"description": "AVM Player for poki games",
	"main": "bundle/poki-player.umd.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"url": "http://www.away3d.com",
	"author": "Rob Bateman",
	"scripts": {
		"rimraf": "rimraf",
		"rollup": "rollup -c",
		"uglifyjs": "uglifyjs ./bundle/poki-player.umd.js -o ./bundle/poki-player.umd.min.js --in-source-map ./bundle/poki-player.umd.js.map --source-map --output ./bundle/poki-player.umd.min.js.map --mangle",
		"tsc": "tsc --lib ES2015.Symbol,DOM,ScriptHost,ES5,ES2015.Iterable",
		"tsc:build": "npm run tsc || exit 0",
		"clean": "npm cache clean && npm run rimraf -- node_modules dist bundle",
		"clean:dist": "npm run rimraf -- dist bundle",
		"watch": "npm run tsc -- --w",
		"prebuild": "npm run clean:dist",
		"build": "npm run tsc:build && npm run rollup && npm run uglifyjs",
		"copyVersionToIndex": "node ./scripts/copyVersionToIndex /index.ts && git add ./index.ts && git commit -m \"update version number in index.ts\"",
		"version": "npm run copyVersionToIndex && npm run build",
		"postversion": "git push && git push --tags"
	},
	"keywords": [
		"AwayJS",
		"WebGL",
		"2D",
		"3D",
		"graphics"
	],
	"license": "Apache-2.0",
	"dependencies": {
		"@awayfl/avm1": "^0.2.6",
		"@awayfl/awayfl-player": "^0.2.5",
		"@awayfl/playerglobal": "^0.2.4",
		"@awayjs/core": "^0.9.3",
		"fs": "0.0.1-security",
		"tslib": "^1.9.0"
	},
	"devDependencies": {
		"rimraf": "^2.5.2",
		"rollup": "^0.57.1",
		"rollup-plugin-commonjs": "^9.1.0",
		"rollup-plugin-includepaths": "^0.2.1",
		"rollup-plugin-node-resolve": "^3.3.0",
		"typescript": "^3.7.3",
		"uglify-js": "^3.0.15"
	}
}
